DB_PORT=5432
DB_USERNAME=tu_usuario_db
DB_PASSWORD=tu_password_db
DB_DATABASE=tu_nombre_db

# ===== JWT =====
JWT_SECRET_KEY=tu_secret_key_muy_seguro

# ===== AUTH0 CONFIGURACIÓN =====
AUTH0_SECRET=tu_secret_auth0_muy_largo_y_seguro
AUTH0_AUDIENCE=http://localhost:3000
AUTH0_CLIENT_ID=tu_auth0_client_id
AUTH0_BASE_URL=https://tu-dominio.auth0.com

# ===== CLOUDINARY CONFIGURACIÓN =====
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
